{
  "name": "lwtv-underscores",
  "version": "6.2.0",
  "description": "LezWatch.TV Custom Theme.",
  "main": "index.js",
  "workspaces": [
    "plugins/lwtv-plugin"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm-run-all2 build:*",
    "build:composer": "composer update",
    "build:grunt": "grunt build",
    "build:workspaces": "npm run build --workspaces",
    "lint": "npm-run-all2 lint:*",
    "lint:css": "npm run lint:css --workspaces",
    "lint:js": "npm run lint:js --workspaces",
    "lint:phpcs": "composer lint",
    "start": "npm-run-all2 start:*",
    "start:blocks": "npm run start --workspaces",
    "preinstall": "composer install",
    "postinstall": "node ./postinstall.js",
    "prepare": "husky",
    "updater": "npm update --workspaces && composer update",
    "clean": "rm -rf node_modules vendor",
    "merge-to-develop": "currentBranch=$(git rev-parse --abbrev-ref HEAD) && git checkout development && git pull && git merge $currentBranch && git push origin development && git checkout $currentBranch",
    "merge-to-prod": "currentBranch=$(git rev-parse --abbrev-ref HEAD) && git checkout production && git pull && git merge $currentBranch && git push origin production && git checkout $currentBranch"
  },
  "author": "LezWatch.TV",
  "license": "GPL-2.0",
  "repository": "https://github.com/lezwatch/lwtv-underscores/",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "coffeescript": "^2.7.0",
    "@npmcli/fs": "^4",
    "@wordpress/scripts": "^27",
    "chart.js": "^4",
    "chartjs-plugin-annotation": "^3",
    "postinstall": "*",
    "tablesorter": "^2"
  },
  "devDependencies": {
    "@lodder/grunt-postcss": "^3.1.1",
    "autoprefixer": "^10.4.15",
    "grunt": "^1.6.1",
    "grunt-auto-install": "^0.3.1",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-terser": "^2.0.0",
    "postcss": "^8.4.29",
    "@types/node": "^18.19",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15",
    "npm-run-all2": "^6.2"
  },
  "lint-staged": {
    "*.php": "npm run lint:phpcs"
  }
}
